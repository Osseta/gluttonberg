!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title= Gluttonberg::Setting.get_setting("title")
    %meta{"http-equiv" => "Content-Type", :content => "text/html;charset=utf-8" }/
    = stylesheet_link_tag "/gluttonberg/stylesheets/admin"
    = javascript_include_tag "/gluttonberg/javascripts/jquery-1.4.2.min.js", "/gluttonberg/javascripts/rails"
  %body{:id => "restrict_site_access"}
    #restrict_site_access
      %h1= Gluttonberg::Setting.get_setting("title")
      %h2 Will be opening soon...
      = form_tag restrict_site_access_path , :method => :get do
        = hidden_field_tag "return_url" ,params[:return_url]
        %h3 Enter website using password: 
        = text_field_tag 'password', nil, :class => "" , :value => "", :title=>"Password"
        = submit_tag('Enter', :class => "button ")
    