- @page_id = "login"
- @page_title = "Log In"

= form_for(@user_session, :url => admin_login_url, :method => :post, :html => {:id => "wrapper"}) do |f|
  %h1#loginTitle Login
  - if @user_session.errors.any?
    #error
      %ul
        - @user_session.errors.full_messages.each do |msg|
          %li
            = msg
  %fieldset
    = f.label :email
    %br
    = f.text_field :email, :class => "text_field"
  %fieldset
    = f.label :password
    %br
    = f.password_field :password, :class => "text_field"
  %fieldset.last
    = f.submit "Login", :class => "button", :disable_with => "Logging you in..."
    
  %p
    = link_to "Forgotten your password?", new_admin_password_reset_path