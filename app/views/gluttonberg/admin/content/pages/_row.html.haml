%tr{:id => drag_tree_row_id(page), :class => drag_tree_row_class(page) + "#{row % 2 == 0? " even" : ""}"}
  %td
    %span{:class => "#{drag_tree_drag_point_class} #{page.home ? "home" : "page"}"}
      = page.home ? "#{page.name} (Home page)" : page.name
  %td.published= page.publishing_status
  %td.controls
    %ul
      - if Gluttonberg.localized? &&  page.localizations.length > 1
        %li= link_to 'Details', admin_page_path(page) 
      - else        
        - default_localization = Gluttonberg::PageLocalization.find(:first , :conditions => { :page_id => page.id , :locale_id => Gluttonberg::Locale.first_default.id } )
        %li= link_to("Edit", edit_admin_page_page_localization_path( :page_id => page.id, :id => default_localization.id))
        %li= link_to("Preview", default_localization.public_path  , { :target => "_blank" }) 
      
      %li= link_to 'Settings', edit_admin_page_path(page) 
      %li= link_to 'Destroy',  delete_admin_page_path(page)