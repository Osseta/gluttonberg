

= sub_nav do
  = back_link("Settings", admin_settings_path)
  = back_link("Users", admin_users_path)

= form_for(@user, :url => url) do  |f|
  = gb_error_messages_for(@user)

  = block("Details") do
    = f.label :email , "E-mail"
    = f.text_field(:email, :class => "large")

    /= admin_rights_form(@user.new_record? ? session.user : @user)

  = block("Password") do
    = f.label :password , "Password"
    = f.password_field(:password, :class => "medium", :label => "Password")
    %br
    = f.label :password_confirmation , "Confirm Password"
    = f.password_field(:password_confirmation, :class => "medium", :label => "Confirm Password")

  = form_controls(admin_users_path)
