- @page_title = "Dialects"
= sub_nav do
  = back_link("Settings", admin_settings_path)
  = nav_link('New', new_admin_dialect_path)

- if @dialects.empty?
  %p.empty No dialects available
- else
  %table{:cellpadding => 0, :cellspacing => 0, :summary => "List of Dialects"}
    %thead
      %tr
        %th Dialect
        %th.controls Controls
    %tbody
      - i = 0
      - for dialect in @dialects
        - i += 1
        %tr{ :class => "#{i % 2 == 0? "even" : ""}"}
          %td= "#{dialect.name} (#{dialect.code})"
          %td.controls
            %ul
              %li= link_to('Edit', edit_admin_dialect_path(dialect))
              %li= link_to "Delete", admin_dialect_path(dialect),  :confirm => 'Are you sure?', :method => :delete
