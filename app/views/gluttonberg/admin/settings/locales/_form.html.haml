= sub_nav do
  = back_link("Settings", admin_settings_path)
  = back_link("Locales", admin_locales_path)

= form_for(@locale, :url => url) do  |f|

  = gb_error_messages_for(@locale)
  = block("Locale") do
    = f.label :name
    = f.text_field(:name)
    %br
    = f.label :slug
    = f.text_field(:slug)
    %br
    - unless @locales.empty?
      = f.label :locale_id , "Fallback Locale"
      = f.select(:locale_id, @locales.collect{|l| [l.name , l.id] } , :include_blank => true )
    = f.check_box(:default, :boolean => true)
    %label{:for => "gluttonberg_locale_default", :class => "checkbox"} Default
  
  
  = block("Dialects") do
    - for dialect in @dialects
      - checked = @locale.dialects.include? dialect
      = check_box_tag "gluttonberg_locale[dialect_ids][]", "#{dialect.id}", checked
      
      %label{:for => "dialect_#{dialect.code}", :class => "checkbox"}= dialect.name_and_code
      %br
  = form_controls(admin_locales_path)
