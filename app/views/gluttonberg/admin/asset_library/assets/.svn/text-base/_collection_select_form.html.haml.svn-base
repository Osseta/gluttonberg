%fieldset{ :id => "collections" }
  %h4 Collections  
  .fieldset.two-column-form
    %h4
      Create a new collection
    = text_field(nil , nil , {:name => 'new_collection[new_collection_name]'      , :class => "large collection" }  )
    .clear
    %br
    %h4
      Add asset to existing collection(s)
    = asset_form.select("asset_collection_ids" ,  @collections.collect{|cc| [cc.name , cc.id] }   , { :include_blank => true  } , { :multiple => true , :class => "large" } )