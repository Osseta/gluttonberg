- @page_title = "Add asset in bulk"
.secondary-navigation
  - sub_nav do
    = back_link("Library", admin_assets_url)
%h2.title
  Add new assets in bulk
.form

  .center-new
    - form_for( :asset , @asset , :url => { :action => :create_assets_in_bulk } ,  :html => { :multipart=>true  , :method => "post"} ) do |asset_form|
      = error_messages_for("asset")

      #edit-form
        = render :partial => "collection_select_form" , :locals => {:asset_form => asset_form }

        %fieldset
          %h4 File
          .fieldset.two-column-form
            %h4 Please upload a zip folder. System will automatically give names to assets based on file names
            = asset_form.file_field(:file)
            .clear
      .clear
        = form_controls(admin_assets_url)
