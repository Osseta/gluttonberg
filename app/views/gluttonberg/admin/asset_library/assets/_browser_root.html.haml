- show_content = (defined?(show_content) ? show_content : false)

#tabs
  %ul
    %li
      %a{ :href => "#tabs-browse"} Browse
    %li
      %a{ :href => "#tabs-collection"} Collections
    
    - if show_content
      %li
        %a{ :href => "#tabs-films"} Films
      %li
        %a{ :href => "#tabs-photoseries"} PhotoSeries
      
      %li
        %a{ :href => "#tabs-sets"} Sets
        
      %li
        %a{ :href => "#tabs-html"} Html contents  
      
  .clear

#tabs-browse
  %ul.assetList
    - if @category_filter.blank? || @category_filter == "all"
      %li
        %a{:href => admin_asset_category_url(:category => 'all' , :page => 1), :class => "browseAll"}
          %h3 All
    - @categories.each do |category|
      %li
        - text = ( category.name == "uncategorised" ?  "Uncategorised" : category.name.pluralize.capitalize )        
        %a{:href => admin_asset_category_url(:category => category.name , :page => 1) , :class => "browse#{text}"}
          %h3= text

#tabs-collection
  - unless @collections.empty?
    %ul.assetList
      - for collection in @collections
        %li
          %a{:href => admin_collection_url(collection), :class => "collection"}
            %h3= collection.name

- if show_content

  #tabs-films
    = render :partial =>  "content_panel" , :locals => { :contents => @films }
  #tabs-photoseries
    = render :partial =>  "content_panel" , :locals => { :contents => @photoseries }
    
              
  #tabs-sets
    = render :partial =>  "content_panel" , :locals => { :contents => @sets }
  
  #tabs-html
    = render :partial =>  "content_panel" , :locals => { :contents => @html_contents }
    

.clear              
         