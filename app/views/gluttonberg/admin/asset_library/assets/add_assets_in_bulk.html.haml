- @window_title = "Asset Library"
- @page_title = "#{link_to "Asset Library", admin_library_path} > Add assets in bulk"
- @page_image = "/gluttonberg/images/sidebar/icon_library.png"

= form_for( :asset , @asset , :url => { :action => :create_assets_in_bulk } ,  :html => { :multipart=>true  , :method => "post", :class => "nosubnav validation"} ) do |asset_form|
  = gb_error_messages_for(@asset)

  %legend
    Add zip folder
  %fieldset
    Please upload a zip folder. System will automatically give names to assets based on file names.
  %fieldset
    = asset_form.label :file , "Select folder"
    = asset_form.file_field(:file , :class => "required")
    
    %br
  = render :partial => "collection_select_form" , :locals => {:asset_form => asset_form }

  = form_controls(admin_assets_url)
