- @page_title = "Collections"
- if @collections.empty?
  %p.empty No collections available
- else
  %table{:cellpadding => 0, :cellspacing => 0, :summary => "Collections"}
    %thead
      %tr
        %th Name
        %th.controls Controls
    %tbody
      - for collection in @collections
        %tr
          %td= collection.name
          %td.controls
            %ul
              %li= link_to("Edit", edit_admin_collection_url(collection)  )
              %li= link_to("Delete", admin_collection_url(collection) , :method => :delete , :confirm => 'Are you sure?')

%p.newLink= link_to('New', new_admin_collection_url , :class => "buttonGrey")