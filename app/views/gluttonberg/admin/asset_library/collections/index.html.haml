= sub_nav do
  = nav_link("New Collection", new_admin_collection_url )
  
- @window_title = "Library"
- @page_title = "#{link_to "Asset Library", admin_library_path} > Collections"
- @page_image = "/images/sidebar/icon_library.png"
- if @collections.empty?
  %p.empty No collections available
- else
  %table{:cellpadding => 0, :cellspacing => 0, :summary => "Collections"}
    %thead
      %tr
        %th Name
        %th.controls Controls
    %tbody
      - for collection in @collections
        %tr
          %td= collection.name
          %td.controls
            %ul
              %li= link_to("Edit", edit_admin_collection_url(collection)  )
              %li= link_to("Delete", delete_admin_collection_url(collection) )

