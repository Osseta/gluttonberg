!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title= "#{website_title} #{@page_title.blank? ? '' : ' : ' + @page_title}"  
    %meta{"http-equiv" => "Content-Type", :content => "text/html;charset=utf-8" }/

    = stylesheet_link_tag "admin" #, "ui-lightness/jquery-ui-1.8.10.custom.css"
    /= stylesheet_link_tag "custom"
    
    = javascript_include_tag "jquery-1.4.2.min.js" , "jquery.dimensions.js" , "jquery-ui-1.8.1.custom.min.js" , "jquery.dragTree.js" , "rails" , "gb_application" , "asset_application"
    
    /= javascript_include_tag "jquery-1.2.6.min.js" , "jquery.dimensions.min.js" , "jquery-ui-1.6.custom.min.js" , "jquery.dragTree.old.js" ,  "gb_application"
    
    = csrf_meta_tag 
    
    /[if IE 6]
      = stylesheet_link_tag "admin-ie6"

    /[if IE 7]
      = stylesheet_link_tag "admin-ie7"
    
  %body{:id => params[:controller].match(%r{\w+$}), :class => params[:action]}
    %div#sidebar
      %h1= website_title
      %h2#navTitle Navigation

      %ul#navigation
        = main_nav_entry("Dashboard", "dashboard", admin_root_path , {:title => "Dashboard"})
        = main_nav_entry("Content", "content", admin_content_path , {:title => "Content"})
        = main_nav_entry("Library", "library", admin_library_path, {:title => "Library"})  
        /- for entry in Gluttonberg::Components.left_nav_entries
        /  - if !entry[2] || entry[2] && session.user.is_super_admin
        /    = main_nav_entry(entry[0], entry[0], entry[1], {:title => entry[0] , :id => Extlib::Inflection.underscore(entry[0].to_s).gsub(/\s/, '_') + "Nav"})
        = main_nav_entry("Settings", "settings", admin_settings_path , {:title => "Settings"})
      - if current_user
        %p
          Logged in as
          %br
          %strong
            = current_user.email
          = link_to "Log Out", admin_logout_url
    %div#wrapper
      %h2#pageTitle= @page_title || "No title set"
      = yield
      

      

